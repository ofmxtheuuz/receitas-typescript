    <script>
        let title = $("title").html()
        $(window).on('blur', function() {
             // Altera o título da página
            document.title = 'Volte aqui =(';
        });

        $(window).on('focus', function() {
            // Restaura o título da página
            document.title = title;
        });

    </script>
